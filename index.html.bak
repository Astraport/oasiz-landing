<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>4 экрана с адаптивным видео и скроллом</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        html, body {
            width: 100%;
            height: 100%;
            overflow: hidden;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            scroll-behavior: smooth;
        }

        .container {
            position: relative;
            height: 100%;
            width: 100%;
            overflow: hidden;
			align-items: center;
        }

        .section {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            padding: 20px;
            transition: transform 1s ease-in-out;
            text-align: center;
            color: white;
            text-shadow: 0 2px 4px rgba(0,0,0,0.7);
            z-index: 2;
        }

        .section-content {
            max-width: 800px;
            z-index: 3;
         
            padding: 30px;
            border-radius: 15px;
            backdrop-filter: blur(5px);
        }

        .section h1 {
            font-size: 3.5rem;
            margin-bottom: 20px;
        }

        .section p {
            font-size: 1.5rem;
            line-height: 1.6;
        }

        #section1 {
            transform: translateY(0%);
        }

        #section2 {
            /* Общий стиль для фона */
            transform: translateY(100%);
            overflow: hidden;
        }

        #section3 {
            background: linear-gradient(135deg, #42e695, #3bb2b8);
            transform: translateY(200%);
        }

        #section4 {
            background: linear-gradient(135deg, #a6c0fe, #f68084);
            transform: translateY(300%);
        }

   /* Контейнеры для изображений */
        .bg-container {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: 1;
        }

        .fg-container {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            display: flex;
            justify-content: center;
            align-items: center;
            z-index: 2;
        }

        /* Фоновые изображения (JPG) */
        .bg-image {
            position: absolute;
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        /* Основные изображения (WebP) */
        .fg-image {
            max-height: 80vh;
            width: auto;
            max-width: 90%;
            object-fit: contain;
            filter: drop-shadow(0 10px 20px rgba(0, 0, 0, 0.3));
        }

        /* Десктопные изображения */
        #desktop-bg {
            display: block;
        }
        #desktop-fg {
            display: block;
        }

        /* Мобильные изображения */
        #mobile-bg {
            display: none;
        }
        #mobile-fg {
            display: none;
        }

        .video-container {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            overflow: hidden;
            z-index: 1;
        }

        .background-video {
            position: absolute;
            top: 50%;
            left: 50%;
            min-width: 100%;
            min-height: 100%;
            width: auto;
            height: auto;
            transform: translate(-50%, -50%);
            object-fit: cover;
        }

        /* Оверлей для захвата событий скролла */
        .video-overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: 2;
        }

       

        @keyframes bounce {
            0%, 20%, 50%, 80%, 100% {transform: translateY(0);}
            40% {transform: translateY(-20px);}
            60% {transform: translateY(-10px);}
        }



        @media (max-width: 768px) {
            .section h1 {
                font-size: 2.5rem;
            }
            
            .section p {
                font-size: 1.2rem;
            }
            
            .section-content {
                padding: 20px;
            }

        }

        @media (max-width: 480px) {
            .section h1 {
                font-size: 2rem;
            }
            
            .section p {
                font-size: 1rem;
            }
            

        }
		
		
		
		
		
		
		
		
		.title {
            text-align: center;
            font-size: 24px;
            font-weight: 300;
            letter-spacing: 3px;
            margin-bottom: 50px;
            text-transform: uppercase;
            color: #ffffff;
        }

        .products-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
            gap: 2px;
            margin-bottom: 40px;
        }

        .product-card {
            position: relative;
            height: 200px;
            overflow: hidden;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .product-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 30px rgba(0,0,0,0.5);
        }

        .product-card img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.3s ease;
        }

        .product-card:hover img {
            transform: scale(1.1);
        }

        .product-overlay {
            position: absolute;
            bottom: 0;
            left: 0;
            right: 0;
            background: linear-gradient(transparent, rgba(0,0,0,0.8));
            padding: 30px 15px 15px;
            transition: all 0.3s ease;
        }

        .product-title {
            font-size: 14px;
            font-weight: 500;
            text-transform: uppercase;
            letter-spacing: 1px;
            line-height: 1.3;
            color: white;
            text-shadow: 0 2px 4px rgba(0,0,0,0.5);
        }

        .view-all-btn {
            display: block;
            margin: 0 auto;
            padding: 15px 40px;
            background: transparent;
            border: 2px solid #ffffff;
            color: white;
            font-size: 14px;
            letter-spacing: 2px;
            text-transform: uppercase;
            cursor: pointer;
            transition: all 0.3s ease;
            text-decoration: none;
            text-align: center;
            max-width: 600px;
        }

        .view-all-btn:hover {
            background: white;
            color: #2c2c2c;
            box-shadow: 0 5px 15px rgba(255,255,255,0.2);
        }

        @media (max-width: 768px) {
            .products-grid {
                grid-template-columns: repeat(2, 1fr);
                gap: 1px;
            }
            
            .product-card {
                height: 150px;
            }
            
            .title {
                font-size: 18px;
                margin-bottom: 30px;
            }
        }

        @media (max-width: 480px) {
            .products-grid {
                grid-template-columns: 1fr;
            }
            
            .product-overlay {
                background: linear-gradient(transparent, rgba(0,0,0,0.9));
            }
        }
		
		/* Десктопные изображения */
#desktop-bg, #desktop-fg {
    display: block;
}

/* Мобильные изображения */
#mobile-bg, #mobile-fg {
    display: none;
}

/* Переключение на мобильные изображения */
@media (max-width: 768px) {
    #desktop-bg, #desktop-fg {
        display: none;
    }
    #mobile-bg, #mobile-fg {
        display: block;
    }
}
    </style>
</head>
<body>
    <div class="container">
        <div class="video-container">
            <video id="desktop-video" class="background-video" autoplay muted playsinline loop>
                <!-- Горизонтальное видео для десктопов -->
                <source src="http://oasis-trade.ru/upload/video/land.mp4" type="video/mp4">
            </video>
            <video id="mobile-video" class="background-video" autoplay muted playsinline loop>
                <!-- Вертикальное видео для мобильных -->
                <source src="http://oasis-trade.ru/upload/video/port.mp4" type="video/mp4">
            </video>
            <!-- Прозрачный оверлей для захвата событий -->
            <div class="video-overlay"></div>
        </div>
        
        <section id="section1" class="section">
          
        </section>
        
        <section id="section2" class="section">
		 <!-- Фоновые изображения (JPG) -->
    <div class="bg-container">
        <img id="desktop-bg" class="bg-image" src="images/desktop-bg.jpg">
        <img id="mobile-bg" class="bg-image" src="images/mobile-bg.jpg">
    </div>
    
    <!-- Основные изображения (WebP) -->
    <div class="fg-container">
        <img id="desktop-fg" class="fg-image" src="images/desktop-fg.webp">
        <img id="mobile-fg" class="fg-image" src="images/mobile-fg.webp">
    </div>
        </section>
        
        <section id="section3" class="section">
             <div class="container">
        <h2 class="title">Наша продукция применяется для:</h2>
        
        <div class="products-grid">
            <div class="product-card">
                <img src="https://images.unsplash.com/photo-1581094794329-c8112a89af12?w=400&h=300&fit=crop" alt="Железнодорожное строительство">
                <div class="product-overlay">
                    <div class="product-title">Ж. д. строительство</div>
                </div>
            </div>
            
            <div class="product-card">
                <img src="https://images.unsplash.com/photo-1558618666-fcd25c85cd64?w=400&h=300&fit=crop" alt="Дренажные системы">
                <div class="product-overlay">
                    <div class="product-title">Дренажные<br>системы</div>
                </div>
            </div>
            
            <div class="product-card">
                <img src="https://images.unsplash.com/photo-1504307651254-35680f356dfd?w=400&h=300&fit=crop" alt="Дорожное строительство">
                <div class="product-overlay">
                    <div class="product-title">Дорожное<br>строительство</div>
                </div>
            </div>
            
            <div class="product-card">
                <img src="https://images.unsplash.com/photo-1541888946425-d81bb19240f5?w=400&h=300&fit=crop" alt="Гражданское строительство">
                <div class="product-overlay">
                    <div class="product-title">Гражданское<br>строительство</div>
                </div>
            </div>
            
            <div class="product-card">
                <img src="https://images.unsplash.com/photo-1586023492125-27b2c045efd7?w=400&h=300&fit=crop" alt="Ландшафтный дизайн">
                <div class="product-overlay">
                    <div class="product-title">Ландшафтный<br>дизайн</div>
                </div>
            </div>
            
            <div class="product-card">
                <img src="https://plus.unsplash.com/premium_photo-1661963767417-80e43ff30993?q=80&w=3870&auto=format&fit=crop&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" alt="Металлургия">
                <div class="product-overlay">
                    <div class="product-title">Металлургия</div>
                </div>
            </div>
        </div>
        
        <a href="#" class="view-all-btn">Смотреть всю продукцию</a>
    </div>
        </section>
        
        <section id="section4" class="section">
            <div class="section-content">
                <h1>Финальный экран</h1>
                <p>Вы достигли последней секции. Попробуйте прокрутить вверх!</p>
            </div>
        </section>
      </div> 

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const sections = document.querySelectorAll('.section');
            
            const counter = document.getElementById('current-screen');
            const desktopVideo = document.getElementById('desktop-video');
            const mobileVideo = document.getElementById('mobile-video');

            const videoOverlay = document.querySelector('.video-overlay');
            let currentSection = 0;
            let isAnimating = false;
            let isMuted = true;
            
            // Инициализация видео
            function initVideo() {
                // Показываем соответствующее видео в зависимости от ориентации
                if (window.innerWidth > window.innerHeight) {
                    // Горизонтальная ориентация
                    desktopVideo.style.display = 'block';
                    mobileVideo.style.display = 'none';
                } else {
                    // Вертикальная ориентация
                    desktopVideo.style.display = 'none';
                    mobileVideo.style.display = 'block';
                }
                
                // Начинаем воспроизведение
                desktopVideo.play().catch(e => console.log('Desktop video play error:', e));
                mobileVideo.play().catch(e => console.log('Mobile video play error:', e));
            }
            
            
            
            // Управление видео
            function manageVideo() {
                if (currentSection === 0) {
                    // На первом экране - запускаем видео
                    desktopVideo.play().catch(e => console.log('Video play error:', e));
                    mobileVideo.play().catch(e => console.log('Video play error:', e));
                } else {
                    // На других экранах - останавливаем видео
                    desktopVideo.pause();
                    mobileVideo.pause();
                }
            }
            
            // Переход к определенной секции
            function goToSection(index) {
                if (isAnimating || index < 0 || index >= sections.length) return;
                
                isAnimating = true;
                currentSection = index;
                
                
                // Управление видео
                manageVideo();
                
                // Анимация перехода
                sections.forEach((section, i) => {
                    section.style.transform = `translateY(${(i - index) * 100}%)`;
                });
                
                // Сброс флага анимации через 1 секунду
                setTimeout(() => {
                    isAnimating = false;
                }, 1000);
            }
            

            
            // Обработчик изменения размера окна
            function handleResize() {
                if (window.innerWidth > window.innerHeight) {
                    desktopVideo.style.display = 'block';
                    mobileVideo.style.display = 'none';
                } else {
                    desktopVideo.style.display = 'none';
                    mobileVideo.style.display = 'block';
                }
            }
            
            // Обработчик прокрутки колеса мыши
            function handleWheel(e) {
                if (isAnimating) return;
                
                if (e.deltaY > 0) {
                    // Скролл вниз
                    goToSection(currentSection + 1);
                } else if (e.deltaY < 0) {
                    // Скролл вверх
                    goToSection(currentSection - 1);
                }
            }
            
            // Обработчик сенсорных событий
            let touchStartY = 0;
            
            function handleTouchStart(e) {
                touchStartY = e.touches[0].clientY;
            }
            
            function handleTouchEnd(e) {
                if (isAnimating) return;
                
                const touchEndY = e.changedTouches[0].clientY;
                const diffY = touchStartY - touchEndY;
                
                if (diffY > 50) {
                    // Свайп вверх
                    goToSection(currentSection + 1);
                } else if (diffY < -50) {
                    // Свайп вниз
                    goToSection(currentSection - 1);
                }
            }
            
            // Инициализация
            initVideo();

            

            window.addEventListener('resize', handleResize);
            
            // Обработка событий скролла
            window.addEventListener('wheel', handleWheel);
            
            // Обработка событий для оверлея видео
            videoOverlay.addEventListener('wheel', handleWheel);
            videoOverlay.addEventListener('touchstart', handleTouchStart, { passive: true });
            videoOverlay.addEventListener('touchend', handleTouchEnd, { passive: true });
            
            // Обработка свайпов для мобильных устройств
            document.addEventListener('touchstart', handleTouchStart, { passive: true });
            document.addEventListener('touchend', handleTouchEnd, { passive: true });

            
            // Обработка клавиш вверх/вниз
            document.addEventListener('keydown', function(e) {
                if (isAnimating) return;
                
                if (e.key === 'ArrowDown') {
                    goToSection(currentSection + 1);
                    e.preventDefault();
                } else if (e.key === 'ArrowUp') {
                    goToSection(currentSection - 1);
                    e.preventDefault();
                } else if (e.key === 'Home') {
                    goToSection(0);
                    e.preventDefault();
                } else if (e.key === 'End') {
                    goToSection(sections.length - 1);
                    e.preventDefault();
                }
            });
        });
    </script>
</body>
</html>